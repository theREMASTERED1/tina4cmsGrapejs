<div class="med-large">
    <h3><a href="{{ article.url }}">{{ article.title }}</a><br> <sub>{{ article.publishedDate }} by {{  article.author }} </sub></h3>
    {% if article.image %}
    <a href="{{ article.url }}">
        <img src="{{ article.image }}"/>
    </a>
    {% endif %}
    <p> {{ article.description | raw }}</p>
</div>
